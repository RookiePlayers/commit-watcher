{
  "name": "commit-watcher",
  "displayName": "Commit Watcher",
  "description": "keeps commits small by inspecting your working tree and warning (or guiding you) when too many files or lines are staged.",
  "version": "1.2.2",
  "publisher": "octech",
  "icon": "icon.png",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/RookiePlayers/commit-watcher.git",
    "type": "git"
  },
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commitWatcher.checkNow",
        "title": "Commit Watcher: Check Now"
      },
      {
        "command": "commitWatcher.partitionChanges",
        "title": "Commit Watcher: Partition Changes"
      }
    ],
    "views": {
      "scm": [
        {
          "id": "commitWatcher.bucketView",
          "name": "Commit Buckets",
          "type": "webview",
          "when": "scmProvider == git",
          "icon": "icon.png"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Commit Watcher",
      "properties": {
        "commitWatcher.maxFiles": {
          "type": "number",
          "default": 10,
          "description": "Maximum number of changed files before a bloat warning is shown."
        },
        "commitWatcher.maxLines": {
          "type": "number",
          "default": 1000,
          "description": "Maximum number of changed lines (added+deleted) before a bloat warning is shown."
        },
        "commitWatcher.autoCheckOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically run bloat check after saving a file."
        },
        "commitWatcher.pollInterval": {
          "type": "number",
          "default": 5,
          "description": "Seconds between automatic checks. Set to 0 to disable."
        },
        "commitWatcher.warnRatio": {
          "type": "number",
          "default": 0.7,
          "minimum": 0.1,
          "maximum": 1,
          "description": "Ratio of limit at which to switch from green to yellow status (e.g. 0.7 = 70% of limit)."
        },
        "commitWatcher.statusBarType": {
          "type": "string",
          "default": "progress",
          "enum": [
            "text",
            "progress",
            "both"
          ],
          "description": "Status bar display mode: 'text' for counts, 'progress' for bar+percent, 'both' for bar and counts."
        }
      }
    }
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p tsconfig.build.json",
    "watch": "tsc -w -p tsconfig.build.json",
    "lint": "eslint src",
    "build": "npm run compile",
    "pretest": "npm run compile && npm run lint",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "publish": "vsce publish --no-yarn"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.77.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}
