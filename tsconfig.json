{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["ES2020"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"noEmit": true,
		"types": ["node", "vscode"]
	},
	"include": [
		"src/**/*.ts",
		"src/test/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"out",
		"commitlint.config.ts",
		"__tests__"
	]
}
